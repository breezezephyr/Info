<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" 
	xmlns="http://java.sun.com/xml/ns/j2ee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <!-- 登录Servlet -->
  <servlet>
     <servlet-name>loginServlet</servlet-name>
     <servlet-class>jl.info.web.servlet.LoginServlet</servlet-class>   
  </servlet>
  <servlet-mapping>
     <servlet-name>loginServlet</servlet-name>
     <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <!-- 人员管理Servlet -->
  <servlet>
     <servlet-name>userServlet</servlet-name>
     <servlet-class>jl.info.web.servlet.UserServlet</servlet-class>   
  </servlet>
  <servlet-mapping>
     <servlet-name>userServlet</servlet-name>
     <url-pattern>/user</url-pattern>
  </servlet-mapping>
  
  <!-- 栏目管理Servlet -->
  <servlet>
     <servlet-name>itemServlet</servlet-name>
     <servlet-class>jl.info.web.servlet.ItemServlet</servlet-class>   
  </servlet>
  <servlet-mapping>
     <servlet-name>itemServlet</servlet-name>
     <url-pattern>/item</url-pattern>
  </servlet-mapping>
  <!-- 新闻管理Servlet -->
  <servlet>
     <servlet-name>contentServlet</servlet-name>
     <servlet-class>jl.info.web.servlet.MessageServlet</servlet-class>   
  </servlet>
  <servlet-mapping>
     <servlet-name>contentServlet</servlet-name>
     <url-pattern>/message</url-pattern>
  </servlet-mapping>
</web-app>
